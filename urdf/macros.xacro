<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro  name="cylinder_inertia" params="mass r l">
      <inertia  ixx="${mass*(3*r*r+l*l)/12}" ixy = "0" ixz = "0"
                iyy="${mass*(3*r*r+l*l)/12}" iyz = "0"
                izz="${mass*(r*r)/2}" />
    </xacro:macro >

    <xacro:macro  name="sphere_inertia" params="mass r">
      <inertia ixx="${2 * mass * r * r / 5}" ixy="0" ixz="0"
            iyy="${2 * mass * r * r / 5}" iyz="0"
            izz="${2 * mass * r * r / 5}"
          />
    </xacro:macro >

    <xacro:macro  name="link_wheel" params="name r l incr">
        <link name="${name}">
            <inertial>
              <mass value="0.2"/>
              <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
               <cylinder_inertia mass="0.2" r="${r}" l="${l}" />
            </inertial>
            <collision name="link_right_wheel_collision">
              <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
              <geometry>
                <cylinder length="${l}" radius="${r + incr}"/>
              </geometry>
            </collision>
<!--             <visual>
              <geometry>
                <cylinder length="${l}" radius="${r + incr}"/>
              </geometry>
              <material name = "darkgrey">
              <color rgba="0.1 0.1 0.1 1"/>
            </material>
            </visual> -->

        </link>
    </xacro:macro >

    <xacro:macro  name="joint_wheel" params="name child origin_xyz">
      <joint name="${name}" type="continuous">
        <origin rpy="0 0 0" xyz="${origin_xyz}"/>
        <child link="${child}"/>
        <parent link="link_chassis"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
      </joint>
    </xacro:macro >


</robot>